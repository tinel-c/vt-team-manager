extends layout

block content
  // Page content
  .container-fluid.mt--6
    .row
      .col-xl-4.order-xl-2
        .card.card-profile
          img.card-img-top(src='../assets/img/theme/img-1-1000x600.jpg' alt='Image placeholder')
          .row.justify-content-center
            .col-lg-3.order-lg-2
              .card-profile-image
                a(href='#')
                  img.rounded-circle(src='../assets/img/theme/team-4.jpg')
          .card-header.text-center.border-0.pt-8.pt-md-4.pb-0.pb-md-4
            .d-flex.justify-content-between
              a.btn.btn-sm.btn-info.mr-4(href='#') Update picture
              a.btn.btn-sm.btn-default.float-right(href='#') Message
          .card-body.pt-0
            .row
              .col
                .card-profile-stats.d-flex.justify-content-center
                  div
                    span.heading 2
                    span.description Medical checks
                  div
                    span.heading 10
                    span.description Trainings
                  div
                    span.heading 12
                    span.description Actions executed on time
            .text-center
              h5.h3
                | Jessica Jones
                span.font-weight-light , 27
              .h5.font-weight-300
                i.ni.location_pin.mr-2
                | Bucharest, Romania
              .h5.mt-4
                i.ni.business_briefcase-24.mr-2
                | Solution Manager - Creative Tim Officer
              div
                i.ni.education_hat.mr-2
                | University of Computer Science
      .col-xl-8.order-xl-1
        .card
          .card-header
            .row.align-items-center
              .col-8
                h3.mb-0 Edit profile 
              .col-4.text-right
                a.btn.btn-sm.btn-primary(href='#!') Save
          .card-body
            form
              h6.heading-small.text-muted.mb-4 User information
              .pl-lg-4
                .row
                  .col-lg-6
                    .form-group
                      label.form-control-label(for='input-username') UID
                      input#input-username.form-control(type='text' placeholder='Username' value='lucky.jesse')
                  .col-lg-6
                    .form-group
                      label.form-control-label(for='input-email') Email address
                      input#input-email.form-control(type='email' placeholder='jesse@example.com')
                .row
                  .col-lg-6
                    .form-group
                      label.form-control-label(for='input-first-name') First name
                      input#input-first-name.form-control(type='text' placeholder='First name' value='Lucky')
                  .col-lg-6
                    .form-group
                      label.form-control-label(for='input-last-name') Last name
                      input#input-last-name.form-control(type='text' placeholder='Last name' value='Jesse')
              hr.my-4
              // Address
              h6.heading-small.text-muted.mb-4 Company information
              .pl-lg-4
                .row
                  .col-md-12
                    .form-group
                      label.form-control-label(for='input-address') Unique access string
                      input#input-address.form-control(placeholder='Generate' value='41kj41bc$4q3jka451*(&%#kjhda144dfas' type='text')
                .row
                  .col-lg-4
                    .form-group
                      label.form-control-label(for='input-city') GID
                      input#input-city.form-control(type='text' placeholder='#gid' value='843313214')
                  .col-lg-4
                    .form-group
                      label.form-control-label(for='input-country') Year of hire
                      input#input-country.form-control(type='text' placeholder='2020' value='2007')
                  .col-lg-4
                    .form-group
                      label.form-control-label(for='input-country') Position
                      input#input-postal-code.form-control(type='text' placeholder='Software developer')