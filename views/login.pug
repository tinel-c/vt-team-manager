// Navbar
nav#navbar-main.navbar.navbar-horizontal.navbar-transparent.navbar-main.navbar-expand-lg.navbar-light
  .container
    a.navbar-brand(href='dashboard.html')
      img(src='../assets/img/brand/vt-team-manager.png')
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar-collapse' aria-controls='navbar-collapse' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbar-collapse.navbar-collapse.navbar-custom-collapse.collapse
      .navbar-collapse-header
        .row
          .col-6.collapse-brand
            a(href='./dashboard')
              img(src='../assets/img/brand/blue.png')
          .col-6.collapse-close
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar-collapse' aria-controls='navbar-collapse' aria-expanded='false' aria-label='Toggle navigation')
              span
              span
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href='dashboard')
            span.nav-link-inner--text Dashboard
// Main content
.main-content
  // Header
  .header.bg-gradient-primary.py-7.py-lg-5.pt-lg-5
    .container
      .header-body.text-center.mb-7
        .row.justify-content-center
          .col-xl-5.col-lg-6.col-md-8.px-5
            h1.text-white Welcome!
            p.text-lead.text-white Login to the team manager application
    .separator.separator-bottom.separator-skew.zindex-100
      svg(x='0' y='0' viewbox='0 0 2560 100' preserveaspectratio='none' version='1.1' xmlns='http://www.w3.org/2000/svg')
        polygon.fill-default(points='2560 0 2560 100 0 100')
  // Page content
  .container.mt--8.pb-5
    .row.justify-content-center
      .col-lg-5.col-md-7
        .card.bg-secondary.border-0.mb-0
          .card-header.bg-transparent.pb-5
            .text-muted.text-center.mt-2.mb-3
              small Fill in your company email to receive the authorization token for the application.
            form(role='form')
              .form-group.mb-3
                .input-group.input-group-merge.input-group-alternative
                  .input-group-prepend
                    span.input-group-text
                      i.ni.ni-email-83
                  input.form-control(placeholder='Email' type='email')
              .text-center
                button.btn.btn-primary.my-4(type='button') Get token
              .form-group
                .input-group.input-group-merge.input-group-alternative
                  .input-group-prepend
                    span.input-group-text
                      i.ni.ni-lock-circle-open
                  input.form-control(placeholder='Token' type='password')
              .custom-control.custom-control-alternative.custom-checkbox
                input.customCheckLogin.custom-control-input(type='checkbox')
                label.custom-control-label(for=' customCheckLogin')
                  span.text-muted Remember me
              .text-center
                button.btn.btn-primary.my-4(type='button') Sign in
// Footer
footer#footer-main.py-5
  .container
    .row.align-items-center.justify-content-xl-between
      .col-xl-6
        .copyright.text-center.text-xl-left.text-muted
          | &copy; 2020 
          a.font-weight-bold.ml-1(href='#' target='_blank') Constantin Bogza
      .col-xl-6
        ul.nav.nav-footer.justify-content-center.justify-content-xl-end
          li.nav-item
            a.nav-link(href='https://github.com/tinel-c/vt-team-manager' target='_blank') Team manager gitgub page
          li.nav-item
            a.nav-link(href='https://github.com/creativetimofficial/argon-dashboard/blob/master/LICENSE.md' target='_blank') MIT License
