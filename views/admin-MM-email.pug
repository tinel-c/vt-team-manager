// Main content
.main-content
  // Header
  .header.bg-gradient-primary.py-7.py-lg-5.pt-lg-5
    .container
      .thisIsAnError #{messages.error}
      .confirmationMessage #{messages.confirmation}
      .header-body.text-center.mb-7
        .row.justify-content-center
          .col-xl-5.col-lg-6.col-md-8.px-5
    .separator.separator-bottom.separator-skew.zindex-100
      svg(x='0' y='0' viewbox='0 0 2560 100' preserveaspectratio='none' version='1.1' xmlns='http://www.w3.org/2000/svg')
  // Page content
  form(role='form' action="/admin-MM-email" method="post")
    .container
      h1 Edit the medical check email
      p Edit the fields in this form related to the medical check email. The users whose medical check will expire in less than 60 days will receive this email.
      hr
      div.twoColumnsGrid
        div
          label(for='Supervisor')
            b 
              | Day of the week
              small  (currently set on #{mmDays})
          div(class="dropdownsearch")
            div(class="options")
              select.selector-bg-color(name="weekDay" placeholder="Select the weekday" id="dynamic_select" required='')
                option.text-center(value=MON) Monday
                option.text-center(value=TUE) Tuesday
                option.text-center(value=WED) Wednesday
                option.text-center(value=THU) Thursday
                option.text-center(value=FRI) Friday
                option.text-center(value=SAT) Saturday
                option.text-center(value=SUN) Sunday
        div
          label(for='hours')
            b 
              | Hour of the day
              small  (currently set at #{mmHours})
          div(class="dropdownsearch")
            div.selector-bg-color(class="options")
              <input class="date-and-time" type="time" name="hour">
      br
      br
      label(for='Formal_Name')
        b 
          | Email message
          small  (you can use the keywords ${name} and ${expirationDate} which will be replaced in the email with the actual emplyee name and medical check expiration date.)
        br
        small ex: ${name} == John Doe, ${expirationDate} == 01-Aug-21
        br
        br
      textarea.form-control.selector-bg-color.areaText(name="emailMessage", cols="30", rows="4") #{mmTexts}
      br
      hr
      button#sign-in.btn.btn-primary.my-4(type='submit' value="Submit") Save to database
  form(role='form' action="/admin-MM-send-email-now" method="post")
    .container
      button#sign-in.btn.btn-primary.my-4.manualSendEmailButton(type='submit' value="Submit") Send email now

